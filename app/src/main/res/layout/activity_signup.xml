<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_account"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="65dp">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:textColor="@color/primary"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/name_placeHolder"
                        android:textColor="@color/primary"
                        style="@style/CustomInputStyle"
                        android:id="@+id/name_ed"
                        />
                </TableRow>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:textColor="@color/primary"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/email_placeHolder"
                        android:textColor="@color/primary"
                        style="@style/CustomInputStyle"
                        android:id="@+id/email_ed"
                        />
                </TableRow>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/number"
                        android:textColor="@color/primary"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/number_placeHolder"
                        android:textColor="@color/primary"
                        style="@style/CustomInputStyle"
                        android:id="@+id/number_ed"/>
                </TableRow>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/password"
                        android:textColor="@color/primary"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/password_placeHolder"
                        android:textColor="@color/primary"
                        style="@style/CustomInputStyle"
                        android:id="@+id/password_ed"/>
                </TableRow>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/signup_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signup_button"
                    style="@style/CustomButtonStyle"
                    />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/primary"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OR"
                        android:textColor="@color/primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/primary"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/facebook_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/ic_facebook"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_weight="1"
                    />
                    <ImageView
                        android:id="@+id/google_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/ic_google"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_weight="1"
                        />


                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Already_have_an_account"
                        android:textColor="@color/white"
                        android:fontFamily="@font/inter_regular"
                        android:layout_weight="1"
                        android:textSize="17sp"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login_link"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="17sp"
                        android:layout_marginEnd="35dp"
                        android:id="@+id/login_link_text"
                        />
                </TableRow>
            </TableLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
